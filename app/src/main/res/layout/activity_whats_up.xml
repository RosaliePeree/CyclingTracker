<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.example.rosalie.cyclingtracker.AboutActivity"
    android:layout_marginTop="?attr/actionBarSize"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="What's new ?"
        android:id="@+id/whatnew"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:id="@+id/idride"
            android:text="id"/>

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:id="@+id/dateride"
            android:layout_weight="1"
            android:text="date"
            />

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:id="@+id/timeride"
            android:layout_weight="1"
            android:text="time" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:id="@+id/averagespeed"
            android:layout_weight="1"
            android:text="average speed" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:id="@+id/distanceride"
            android:layout_weight="1"
            android:text="distance" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_of_rides"
        android:divider="@color/colorAccent"
        android:dividerHeight="2dp"
        android:layout_weight="0.30" />

</LinearLayout>
